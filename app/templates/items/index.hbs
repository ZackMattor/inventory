<div class="row">
  <div class="col-md-12">
    <table id="inventory" class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody>
        {{#each item in model}}
          {{#link-to 'item' item tagName="tr"}}
            <tr>
              <td>{{item.name}}</td>
              <td>{{item.location}}</td>
            </tr>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
